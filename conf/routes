# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
OPTIONS        /                        @controllers.Application.preflight(path: String ?= "")
OPTIONS        /*path                   @controllers.Application.preflight(path)

GET            /                        @controllers.Application.index
GET            /index2                  @controllers.Application.index2
GET            /randomUUI               @controllers.Application.randomUUID


# User management API
GET            /users                   @controllers.Users.findUsers
POST           /user                    @controllers.Users.createUser

# Catalog management API
#GET            /catalogs                @controllers.Catalogs.find(q:Option[String])
#GET            /catalogs/:id            @controllers.Catalogs.getById(id)
#PUT            /catalogs/:id            @controllers.Catalogs.update(id)
#POST           /catalogs/:id            @controllers.Catalogs.update(id)
#POST           /catalogs                @controllers.Catalogs.create
#DELETE         /catalogs/:id            @controllers.Catalogs.delete(id)

GET             /catalogs/:id           controllers.CatalogsCake.getById(id)
GET             /catalogs               controllers.CatalogsCake.find(q:Option[String])
PUT             /catalogs/:id           controllers.CatalogsCake.update(id)
POST            /catalogs/:id           controllers.CatalogsCake.update(id)
POST            /catalogs               controllers.CatalogsCake.create


GET            /models                  @controllers.Models.find(q:Option[String])
GET            /models/:id              @controllers.Models.getById(id)
PUT            /models/:id              @controllers.Models.update(id)
POST           /models/:id              @controllers.Models.update(id)
POST           /models                  @controllers.Models.create
DELETE         /models/:id              @controllers.Models.delete(id)




# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file            controllers.Assets.at(path="/public", file)
